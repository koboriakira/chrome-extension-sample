{
  "manifest_version": 3,
  "name": "Slack Link Post",
  "description": "フォーカス中のタブのタイトル・URLをSlackに投稿します / Post the title and URL of the focused tab to Slack",
  "author": "koboriakira",
  "host_permissions": [
    "https://slack.com/"
  ],
  "options_page": "options.html",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/16.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}
